@model RealPollSignalR.Models.Question
@{
    ViewBag.Title = "Vote for your option";
}

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var poll = $.connection.poll;
            $.connection.hub.start().done(function () {
                $('button').click(function () {
                    poll.server.vote($(this).val());
                });
            });
        });
    </script>
}

<div class="row">
    <div class="col-md-4">
        <h2>@Html.DisplayFor(m => m.QuestionText)</h2>
    </div>
    @foreach (var item in Model.Answers)
    {
        <button value="@item.AnswerId">@item.AnswerText</button>   
    }

</div>